<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!--make a gradient background-->
            <gradient
                android:type="linear"
                android:startColor="#ff3d36"
                android:endColor="#ff3d36"
                android:centerColor="#ff3d36"
                android:angle="90"
                android:gradientRadius="90"
                />
            <!--apply a border around button-->
            <!--<stroke android:color="#006400" android:width="1dp" />-->
            <stroke android:color="#ff3d36" android:width="1dp" />
            <!-- make the button corners rounded-->
            <corners android:radius="6dp"/>
        </shape>
    </item>
</selector>